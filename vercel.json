{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@now/node"
      }
    ],
    "routes": [
      {
        // Specify which paths will route to a destination using a regex
        "src": "/(.*)",
        // Specify the paths' destination
        "dest": "app.js"
      }
    ]
  }